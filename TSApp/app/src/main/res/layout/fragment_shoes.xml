<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorGray">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="317dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/indoor1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="120000₩"
                    android:textColor="@color/colorWhite"
                    android:textSize="50dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(정기권 구매시 10% 할인)"
                    android:textColor="@color/colorWhite" />

                <Spinner
                    android:id="@+id/planets_spinner_i"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/country_arrays_i"
                    android:prompt="@string/country_prompt_i"
                    android:layout_marginTop="15dp"
                    />


                <Button
                    android:id="@+id/sell_button_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="구매하기"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/cart_button_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="장바구니 담기"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="*상품설명"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/indoor2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새차멘트2"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/indoor3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/g0ff" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>